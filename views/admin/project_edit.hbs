{{!< layouts/base}}

<div class="min-h-screen bg-black text-white py-16 px-8">
  <div class="max-w-3xl mx-auto bg-gray-900 p-8 rounded-2xl shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-neon">Edit Project</h1>

    <form method="POST" action="/admin/projects/edit/{{project.id}}" enctype="multipart/form-data" class="space-y-5">
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Title</label>
        <input type="text" name="title" value="{{project.title}}" class="w-full px-4 py-2 text-black rounded-lg" />
      </div>
    
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Description</label>
        <textarea name="description" rows="5"
          class="w-full px-4 py-2 text-black rounded-lg">{{project.description}}</textarea>
      </div>
    
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Tech Stack</label>
        <input type="text" name="tech" value="{{project.tech}}" class="w-full px-4 py-2 text-black rounded-lg" />
      </div>
    
      <!-- Existing Images -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Current Images</label>
        <div class="flex flex-wrap gap-3">
          {{#each project.images}}
          <img src="{{this}}" alt="Current image" class="w-24 h-24 object-cover rounded-lg border border-gray-700" />
          {{/each}}
        </div>
      </div>
    
      <!-- New Upload -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Upload New Images</label>
        <input type="file" name="images" multiple accept="image/*"
          class="w-full text-gray-300 border border-gray-600 rounded-lg p-2 bg-gray-800" />
      </div>
    
      <div class="grid md:grid-cols-2 gap-5">
        <div>
          <label class="block mb-2 text-gray-300 font-medium">Repo URL</label>
          <input type="text" name="repo_url" value="{{project.repo_url}}" class="w-full px-4 py-2 text-black rounded-lg" />
        </div>
        <div>
          <label class="block mb-2 text-gray-300 font-medium">Demo URL</label>
          <input type="text" name="demo_url" value="{{project.demo_url}}" class="w-full px-4 py-2 text-black rounded-lg" />
        </div>
      </div>
    
      <button type="submit" class="w-full mt-6 bg-neon text-black font-semibold py-2 rounded-lg hover:scale-105 transition">
        Update Project
      </button>
    </form>


    <div class="mt-4 text-center">
      <a href="/admin/dashboard" class="text-gray-400 hover:text-neon transition">‚Üê Back to Dashboard</a>
    </div>
  </div>
</div>
