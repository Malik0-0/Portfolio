{{!< layouts/base}}

<div class="min-h-screen bg-black text-white py-16 px-8">
  <div class="max-w-3xl mx-auto bg-gray-900 p-8 rounded-2xl shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-neon">Edit Experience</h1>

    <form method="POST" action="/admin/experience/edit/{{exp.id}}" enctype="multipart/form-data" class="space-y-5">
    <!-- Role -->
    <div>
        <label class="block mb-2 text-gray-300 font-medium">Role</label>
        <input
        type="text"
        name="role"
        value="{{exp.role}}"
        class="w-full px-4 py-2 text-black rounded-lg"
        />
    </div>

    <!-- Company -->
    <div>
        <label class="block mb-2 text-gray-300 font-medium">Company</label>
        <input
        type="text"
        name="company"
        value="{{exp.company}}"
        class="w-full px-4 py-2 text-black rounded-lg"
        />
    </div>

    <!-- Location -->
    <div>
        <label class="block mb-2 text-gray-300 font-medium">Location</label>
        <input
        type="text"
        name="location"
        value="{{exp.location}}"
        class="w-full px-4 py-2 text-black rounded-lg"
        />
    </div>

    <!-- Dates -->
    <div class="grid md:grid-cols-2 gap-5">
        <div>
        <label class="block mb-2 text-gray-300 font-medium">Start Date</label>
        <input
            type="date"
            name="start_date"
            value="{{exp.start_date}}"
            class="w-full px-4 py-2 text-black rounded-lg"
        />
        </div>
        <div>
        <label class="block mb-2 text-gray-300 font-medium">End Date</label>
        <input
            type="date"
            name="end_date"
            value="{{exp.end_date}}"
            class="w-full px-4 py-2 text-black rounded-lg"
        />
        </div>
    </div>

    <!-- Description -->
    <div>
        <label class="block mb-2 text-gray-300 font-medium">Description</label>
        <textarea
        name="description"
        rows="5"
        class="w-full px-4 py-2 text-black rounded-lg"
        >{{exp.description}}</textarea>
    </div>

    <!-- Tech Stack -->
    <div>
        <label class="block mb-2 text-gray-300 font-medium">Tech Stack</label>
        <input
        type="text"
        name="tech"
        value="{{exp.tech}}"
        class="w-full px-4 py-2 text-black rounded-lg"
        />
    </div>

    <!-- Existing Pictures -->
    <div>
        <label class="block mb-2 text-gray-300 font-medium">Current Images</label>
        <div class="flex flex-wrap gap-3">
        {{#each exp.pictures}}
            <img
            src="{{this}}"
            alt="Current image"
            class="w-24 h-24 object-cover rounded-lg border border-gray-700"
            />
        {{/each}}
        </div>
    </div>

    <!-- Upload New Pictures -->
    <div>
        <label class="block mb-2 text-gray-300 font-medium">Upload New Images</label>
        <input
        type="file"
        name="pictures"
        multiple
        accept="image/*"
        class="w-full text-gray-300 border border-gray-600 rounded-lg p-2 bg-gray-800"
        />
    </div>

    <!-- Submit -->
    <button
        type="submit"
        class="w-full mt-6 bg-neon text-black font-semibold py-2 rounded-lg hover:scale-105 transition"
    >
        Update Experience
    </button>
    </form>



    <div class="mt-4 text-center">
      <a href="/admin/dashboard" class="text-gray-400 hover:text-neon transition">‚Üê Back to Dashboard</a>
    </div>
  </div>
</div>
