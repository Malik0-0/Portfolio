{{!< layouts/base}}

<div class="min-h-screen bg-black text-white py-16 px-8">
  <div class="max-w-3xl mx-auto bg-gray-900 p-8 rounded-2xl shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-neon">Add New Experience</h1>

    <form method="POST" action="/admin/experience/new" enctype="multipart/form-data" class="space-y-5">
      <!-- Role -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Role</label>
        <input type="text" name="role" required
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Company -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Company</label>
        <input type="text" name="company" required
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Location -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Location</label>
        <input type="text" name="location" placeholder="Depok, Indonesia"
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Dates -->
      <div class="grid md:grid-cols-2 gap-5">
        <div>
          <label class="block mb-2 text-gray-300 font-medium">Start Date</label>
          <input type="date" name="start_date" required
            class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
        </div>
        <div>
          <label class="block mb-2 text-gray-300 font-medium">End Date</label>
          <input type="date" name="end_date"
            class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
        </div>
      </div>

      <!-- Description -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Description</label>
        <textarea name="description" rows="6" placeholder="Describe your responsibilities, tasks, and achievements..."
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" required></textarea>
      </div>

      <!-- Tech Stack -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Tech Stack (comma separated)</label>
        <input type="text" name="tech" placeholder="React, Node.js, PostgreSQL"
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Image Upload -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Upload Images (max 5)</label>
        <input type="file" name="pictures" accept="image/*" multiple class="w-full px-4 py-2 bg-gray-800 text-gray-200 rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Submit -->
      <button type="submit"
        class="w-full mt-6 bg-neon text-black font-semibold py-2 rounded-lg hover:scale-105 transition">
        Save Experience
      </button>
    </form>

    <!-- Back -->
    <div class="mt-4 text-center">
      <a href="/admin/dashboard" class="text-gray-400 hover:text-neon transition">
        Back to Dashboard
      </a>
    </div>
  </div>
</div>