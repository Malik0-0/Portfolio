{{!< layouts/base}}

<div class="flex flex-col items-center justify-center min-h-screen bg-black text-white">
  <div class="bg-gray-900 p-8 rounded-2xl w-80 shadow-xl">
    <h2 class="text-2xl font-bold text-center mb-6">Admin Login</h2>

    <form method="POST" action="/admin/login" class="space-y-4">
      <input type="email" name="email" placeholder="Email"
        class="w-full px-4 py-2 rounded-lg text-black focus:ring-2 focus:ring-neon" required />

      <input type="password" name="password" placeholder="Password"
        class="w-full px-4 py-2 rounded-lg text-black focus:ring-2 focus:ring-neon" required />

      <button type="submit"
        class="w-full bg-neon text-black font-semibold py-2 rounded-lg hover:scale-105 transition">
        Login
      </button>
    </form>
  </div>
</div>
