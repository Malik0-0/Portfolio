{{!< layouts/base}}

<div class="min-h-screen bg-black text-white py-16 px-8">
  <div class="max-w-3xl mx-auto bg-gray-900 p-8 rounded-2xl shadow-lg">
    <h1 class="text-2xl font-bold mb-6 text-neon">Add New Project</h1>

    <form method="POST" action="/admin/projects/new" enctype="multipart/form-data" class="space-y-5">
      <!-- Title -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Project Title</label>
        <input type="text" name="title" required
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Description -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Description</label>
        <textarea name="description" rows="5" placeholder="Describe your project..."
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" required></textarea>
      </div>

      <!-- Tech Stack -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Tech Stack (comma separated)</label>
        <input type="text" name="tech" placeholder="React, Node.js, Tailwind"
          class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Multiple Image Upload -->
      <div>
        <label class="block mb-2 text-gray-300 font-medium">Upload Project Images</label>
        <input type="file" name="images" accept="image/*" multiple class="w-full px-4 py-2 bg-gray-800 text-gray-200 rounded-lg focus:ring-2 focus:ring-neon" />
      </div>

      <!-- Repo and Demo URLs -->
      <div class="grid md:grid-cols-2 gap-5">
        <div>
          <label class="block mb-2 text-gray-300 font-medium">Repo URL</label>
          <input type="text" name="repo_url"
            class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
        </div>
        <div>
          <label class="block mb-2 text-gray-300 font-medium">Demo URL</label>
          <input type="text" name="demo_url"
            class="w-full px-4 py-2 text-black rounded-lg focus:ring-2 focus:ring-neon" />
        </div>
      </div>

      <!-- Submit -->
      <button type="submit"
        class="w-full mt-6 bg-neon text-black font-semibold py-2 rounded-lg hover:scale-105 transition">
        Save Project
      </button>
    </form>

    <!-- Back -->
    <div class="mt-4 text-center">
      <a href="/admin/dashboard" class="text-gray-400 hover:text-neon transition">
        Back to Dashboard
      </a>
    </div>
  </div>
</div>